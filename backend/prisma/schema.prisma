generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  orders    Order[]

  @@map("Users")
}

model Order {
  id         Int      @id @default(autoincrement())
  name       String
  phone      String
  carDetails String
  totalPrice Float
  createdAt  DateTime @default(now())
  userId     Int?
  user       User?    @relation(fields: [userId], references: [id])

  @@map("Orders")
}

model Component {
  id        Int      @id @default(autoincrement())
  slug      String
  text      String
  photoUrl  String
  videoUrl  String?
  updatedAt DateTime @updatedAt

  @@map("Components")
}

model Calculator {
  id        Int      @id @default(autoincrement())
  formula   String
  coeffs    Json
  updatedAt DateTime @updatedAt

  @@map("Calculators")
}

model Review {
  id        Int      @id @default(autoincrement())
  name      String
  rating    Int
  comment   String
  photo     String
  regionId  Int
  region    Region   @relation(fields: [regionId], references: [id])
  createdAt DateTime @default(now())

  @@map("Reviews")
}

model Region {
  id      Int      @id @default(autoincrement())
  name    String
  area    String
  reviews Review[]

  @@map("Regions")
}

model Stat {
  id        Int      @id @default(autoincrement())
  name      String
  value     String
  updatedAt DateTime @updatedAt

  @@map("Stats")
}
